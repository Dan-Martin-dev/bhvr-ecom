# Database
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/bhvr_ecom

# Redis
REDIS_URL=redis://localhost:6379

# Server
PORT=3000

# Authentication
BETTER_AUTH_SECRET=your-super-secret-key-min-32-chars
BETTER_AUTH_URL=http://localhost:3000

# CORS - Allow frontend origin (Development: Vite dev server)
CORS_ORIGIN=http://localhost:3001

# Frontend - Server URL for API calls (Development: use empty for proxy)
VITE_SERVER_URL=

# Mercado Pago (Argentina Payment Gateway)
MERCADO_PAGO_ACCESS_TOKEN=your-access-token
MERCADO_PAGO_PUBLIC_KEY=your-public-key
MERCADO_PAGO_WEBHOOK_SECRET=your-webhook-secret

# Email (Brevo/Sendinblue SMTP)
# Get credentials at: https://app.brevo.com/settings/keys/smtp
BREVO_SMTP_HOST=smtp-relay.brevo.com
BREVO_SMTP_PORT=587
BREVO_SMTP_USER=your-brevo-smtp-login
BREVO_SMTP_PASSWORD=your-brevo-smtp-key
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
EMAIL_FROM_NAME=BHVR E-commerce

# ============================================================================
# CDN / Image Optimization
# Choose ONE of the following options based on your CDN provider
# ============================================================================

# Option 1: Cloudinary (Recommended - Free tier: 25 GB/month)
# Sign up: https://cloudinary.com
# VITE_CDN_PROVIDER=cloudinary
# VITE_CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret

# Option 2: Cloudflare Images ($5/month for 100,000 images)
# VITE_CDN_PROVIDER=cloudflare
# VITE_CLOUDFLARE_ACCOUNT_HASH=your_account_hash
# CLOUDFLARE_ACCOUNT_HASH=your_account_hash
# CLOUDFLARE_API_TOKEN=your_api_token

# Option 3: imgproxy (Self-hosted)
# VITE_CDN_PROVIDER=imgproxy
# VITE_IMGPROXY_URL=https://imgproxy.yourdomain.com
# IMGPROXY_URL=https://imgproxy.yourdomain.com
# IMGPROXY_KEY=your_generated_key
# IMGPROXY_SALT=your_generated_salt

# Option 4: Local (Development only - no CDN)
VITE_CDN_PROVIDER=local

# Production Only
# ACME_EMAIL=admin@example.com
# DOMAIN=example.com
# TRAEFIK_USERS=admin:$$apr1$$hashedpassword
